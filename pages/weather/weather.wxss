    background-color: #6EB720;
    padding: 0px 10px;
}

.mid-right .cm_area_level2 {
    background-color: #D6C60F;
    padding: 0px 10px;
}

.mid-right .cm_area_level3 {
    background-color: #EC7E22;
    padding: 0px 10px;
}

.mid-right .cm_area_level4 {
    background-color: #CE3333;
    padding: 0px 10px;
}

.mid-right .cm_area_level5 {
